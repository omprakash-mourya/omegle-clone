{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "buildCommand": "npm run build",
        "installCommand": "npm install --legacy-peer-deps"
      }
    }
  ],
  "env": {
    "NEXTAUTH_URL": "https://${VERCEL_URL}",
    "NEXT_PUBLIC_APP_URL": "https://${VERCEL_URL}"
  }
} 